<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pstc.employeemanagement" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddEmployee"
            android:label="@string/title_activity_add_employee" >
        </activity>
        <activity
            android:name=".EmployeeDetailActivity"
            android:label="@string/title_activity_employee_detail" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pstc.employeemanagement.MainActivity" />
        </activity>
    </application>

</manifest>
